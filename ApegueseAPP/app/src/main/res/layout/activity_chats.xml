<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorProfile"
    tools:context="com.univas.apegueseapp.apegueseapp.ChatActivity">

    <include
        android:id="@+id/chats_bar_layout"
        layout="@layout/app_bar_layout">
    </include>
    <TextView
        android:id="@+id/all_chats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/chats_bar_layout"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:text="Conversas" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/chat_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/all_chats"
        android:layout_marginTop="15dp" />

</RelativeLayout>